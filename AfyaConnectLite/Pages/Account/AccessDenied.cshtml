@page
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="text-danger">Access Denied</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-shield-exclamation text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h4>You don't have permission to access this page.</h4>
                    <p class="text-muted">
                        This page requires specific role permissions. Please contact your administrator if you believe this is an error.
                    </p>
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">Return to Home</a>
                        <a href="/Account/Login" class="btn btn-outline-secondary">Login with Different Account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
