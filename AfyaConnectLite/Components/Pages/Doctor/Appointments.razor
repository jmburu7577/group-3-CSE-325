@page "/doctor/appointments"
@attribute [Authorize(Roles = "Doctor")]
@using AfyaConnectLite.Models
@using AfyaConnectLite.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IAppointmentService AppointmentService
@inject UserManager<ApplicationUser> UserManager

<PageTitle>Appointments - AfyaConnect Lite</PageTitle>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Manage Appointments</h2>
            <p class="text-muted">View and manage all your scheduled appointments</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="form-group">
                <label for="statusFilter" class="form-label">Filter by Status</label>
                <select class="form-select" id="statusFilter" @bind="selectedStatus">
                    <option value="">All Statuses</option>
                    <option value="Scheduled">Scheduled</option>
                    <option value="Confirmed">Confirmed</option>
                    <option value="InProgress">In Progress</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                    <option value="NoShow">No Show</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="dateFilter" class="form-label">Filter by Date Range</label>
                <select class="form-select" id="dateFilter" @bind="selectedDateFilter">
                    <option value="all">All Time</option>
                    <option value="today">Today</option>
                    <option value="upcoming">Upcoming</option>
                    <option value="past">Past</option>
                    <option value="last7">Last 7 Days</option>
                    <option value="last30">Last 30 Days</option>
                </select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="searchTerm" class="form-label">Search Patients</label>
                <input type="text" class="form-control" id="searchTerm" @bind="searchTerm" placeholder="Search by name or email" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Appointments (@filteredAppointments.Count())</h5>
                    <div class="btn-group" role="group">
                        <button class="btn btn-sm btn-outline-primary" @onclick="ExportAppointments">
                            <i class="bi bi-download"></i> Export
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="RefreshAppointments">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (filteredAppointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Patient</th>
                                        <th>Contact</th>
                                        <th>Reason</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in filteredAppointments)
                                    {
                                        <tr class="@(IsAppointmentToday(appointment) ? "table-info" : "")">
                                            <td>
                                                <div>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                                <small class="text-muted">@appointment.AppointmentDate.ToString("h:mm tt")</small>
                                                @if (IsAppointmentToday(appointment))
                                                {
                                                    <div><span class="badge bg-info">Today</span></div>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                        @appointment.Patient.FirstName.FirstOrDefault()@appointment.Patient.LastName.FirstOrDefault()
                                                    </div>
                                                    <div>
                                                        <div>@appointment.Patient.FirstName @appointment.Patient.LastName</div>
                                                        <small class="text-muted">ID: @appointment.Patient.Id.Substring(0, 8)</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>@appointment.Patient.Email</div>
                                                @if (!string.IsNullOrEmpty(appointment.Patient.PhoneNumber))
                                                {
                                                    <small class="text-muted">@appointment.Patient.PhoneNumber</small>
                                                }
                                            </td>
                                            <td>
                                                <div>@appointment.Reason</div>
                                                @if (!string.IsNullOrEmpty(appointment.Symptoms))
                                                {
                                                    <small class="text-muted text-truncate d-block" style="max-width: 200px;">
                                                        @appointment.Symptoms
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-@(GetStatusColor(appointment.Status))">
                                                    @appointment.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-info" @onclick="() => ViewDetails(appointment.Id)">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    @if (appointment.Status == AppointmentStatus.Scheduled)
                                                    {
                                                        <button class="btn btn-sm btn-outline-success" @onclick="() => ConfirmAppointment(appointment.Id)">
                                                            <i class="bi bi-check"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-warning" @onclick="() => StartAppointment(appointment.Id)">
                                                            <i class="bi bi-play"></i>
                                                        </button>
                                                    }
                                                    @if (appointment.Status == AppointmentStatus.Confirmed)
                                                    {
                                                        <button class="btn btn-sm btn-outline-warning" @onclick="() => StartAppointment(appointment.Id)">
                                                            <i class="bi bi-play"></i>
                                                        </button>
                                                    }
                                                    @if (appointment.Status == AppointmentStatus.InProgress)
                                                    {
                                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => AddConsultationNote(appointment.Id)">
                                                            <i class="bi bi-pencil"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-success" @onclick="() => CompleteAppointment(appointment.Id)">
                                                            <i class="bi bi-check-circle"></i>
                                                        </button>
                                                    }
                                                    @if (appointment.Status == AppointmentStatus.Scheduled || appointment.Status == AppointmentStatus.Confirmed)
                                                    {
                                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => CancelAppointment(appointment.Id)">
                                                            <i class="bi bi-x"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">No appointments found</h5>
                            <p class="text-muted">No appointments match your current filters.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (showDetailsModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Appointment Details</h5>
                    <button type="button" class="btn-close" @onclick="() => showDetailsModal = false"></button>
                </div>
                <div class="modal-body">
                    @if (selectedAppointment != null)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Appointment Information</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Date:</strong></td>
                                        <td>@selectedAppointment.AppointmentDate.ToString("MMMM dd, yyyy")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Time:</strong></td>
                                        <td>@selectedAppointment.AppointmentDate.ToString("h:mm tt")</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Status:</strong></td>
                                        <td>
                                            <span class="badge bg-@(GetStatusColor(selectedAppointment.Status))">
                                                @selectedAppointment.Status
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Reason:</strong></td>
                                        <td>@selectedAppointment.Reason</td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(selectedAppointment.Symptoms))
                                    {
                                        <tr>
                                            <td><strong>Symptoms:</strong></td>
                                            <td>@selectedAppointment.Symptoms</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td><strong>Created:</strong></td>
                                        <td>@selectedAppointment.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h6>Patient Information</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Name:</strong></td>
                                        <td>@selectedAppointment.Patient.FirstName @selectedAppointment.Patient.LastName</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email:</strong></td>
                                        <td>@selectedAppointment.Patient.Email</td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(selectedAppointment.Patient.PhoneNumber))
                                    {
                                        <tr>
                                            <td><strong>Phone:</strong></td>
                                            <td>@selectedAppointment.Patient.PhoneNumber</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td><strong>Date of Birth:</strong></td>
                                        <td>@selectedAppointment.Patient.DateOfBirth.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                    @if (!string.IsNullOrEmpty(selectedAppointment.Patient.MedicalHistory))
                                    {
                                        <tr>
                                            <td><strong>Medical History:</strong></td>
                                            <td>@selectedAppointment.Patient.MedicalHistory</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>

                        @if (consultationNotes.Any())
                        {
                            <div class="mt-4">
                                <h6>Consultation Notes</h6>
                                <div class="list-group">
                                    @foreach (var note in consultationNotes)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="mb-1">Dr. @note.Doctor.FirstName @note.Doctor.LastName</h6>
                                                <small class="text-muted">@note.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</small>
                                            </div>
                                            <p class="mb-1">@note.Notes</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showDetailsModal = false">Close</button>
                    @if (selectedAppointment != null)
                    {
                        @if (selectedAppointment.Status == AppointmentStatus.Scheduled)
                        {
                            <button type="button" class="btn btn-success" @onclick="() => ConfirmAppointment(selectedAppointment.Id)">
                                Confirm
                            </button>
                            <button type="button" class="btn btn-warning" @onclick="() => StartAppointment(selectedAppointment.Id)">
                                Start
                            </button>
                        }
                        @if (selectedAppointment.Status == AppointmentStatus.Confirmed)
                        {
                            <button type="button" class="btn btn-warning" @onclick="() => StartAppointment(selectedAppointment.Id)">
                                Start
                            </button>
                        }
                        @if (selectedAppointment.Status == AppointmentStatus.InProgress)
                        {
                            <button type="button" class="btn btn-primary" @onclick="() => AddConsultationNote(selectedAppointment.Id)">
                                Add Notes
                            </button>
                            <button type="button" class="btn btn-success" @onclick="() => CompleteAppointment(selectedAppointment.Id)">
                                Complete
                            </button>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}

@if (showNoteModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Consultation Note</h5>
                    <button type="button" class="btn-close" @onclick="() => showNoteModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="consultationNotes" class="form-label">Consultation Notes</label>
                        <textarea class="form-control" id="consultationNotes" @bind="consultationNoteText" rows="5" placeholder="Enter your consultation notes here..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showNoteModal = false">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveConsultationNote">Save Note</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private ApplicationUser? currentUser;
    private IEnumerable<Appointment> allAppointments = new List<Appointment>();
    private IEnumerable<Appointment> filteredAppointments = new List<Appointment>();
    private Appointment? selectedAppointment;
    private IEnumerable<ConsultationNote> consultationNotes = new List<ConsultationNote>();
    private string selectedStatus = string.Empty;
    private string selectedDateFilter = "upcoming";
    private string searchTerm = string.Empty;
    private bool showDetailsModal = false;
    private bool showNoteModal = false;
    private int appointmentForNote = 0;
    private string consultationNoteText = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
        await LoadAppointments();
    }

    private async Task LoadUserData()
    {
        currentUser = await UserManager.GetUserAsync(User);
    }

    private async Task LoadAppointments()
    {
        if (currentUser != null)
        {
            allAppointments = await AppointmentService.GetAppointmentsForDoctorAsync(currentUser.Id);
            FilterAppointments();
        }
    }

    private void FilterAppointments()
    {
        filteredAppointments = allAppointments.AsEnumerable();

        // Filter by status
        if (!string.IsNullOrEmpty(selectedStatus))
        {
            filteredAppointments = filteredAppointments.Where(a => a.Status.ToString() == selectedStatus);
        }

        // Filter by date
        switch (selectedDateFilter)
        {
            case "today":
                filteredAppointments = filteredAppointments.Where(a => a.AppointmentDate.Date == DateTime.Today);
                break;
            case "upcoming":
                filteredAppointments = filteredAppointments.Where(a => a.AppointmentDate >= DateTime.Today);
                break;
            case "past":
                filteredAppointments = filteredAppointments.Where(a => a.AppointmentDate < DateTime.Today);
                break;
            case "last7":
                var sevenDaysAgo = DateTime.Today.AddDays(-7);
                filteredAppointments = filteredAppointments.Where(a => a.AppointmentDate >= sevenDaysAgo);
                break;
            case "last30":
                var thirtyDaysAgo = DateTime.Today.AddDays(-30);
                filteredAppointments = filteredAppointments.Where(a => a.AppointmentDate >= thirtyDaysAgo);
                break;
        }

        // Filter by search term
        if (!string.IsNullOrEmpty(searchTerm))
        {
            filteredAppointments = filteredAppointments.Where(a => 
                a.Patient.FirstName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                a.Patient.LastName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                a.Patient.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase));
        }

        filteredAppointments = filteredAppointments.OrderByDescending(a => a.AppointmentDate);
    }

    private async Task ViewDetails(int appointmentId)
    {
        selectedAppointment = await AppointmentService.GetAppointmentByIdAsync(appointmentId);
        if (selectedAppointment != null)
        {
            consultationNotes = await AppointmentService.GetConsultationNotesForAppointmentAsync(selectedAppointment.PatientId);
            showDetailsModal = true;
        }
    }

    private async Task ConfirmAppointment(int appointmentId)
    {
        await AppointmentService.UpdateAppointmentStatusAsync(appointmentId, AppointmentStatus.Confirmed);
        await LoadAppointments();
        if (showDetailsModal)
        {
            await ViewDetails(appointmentId);
        }
    }

    private async Task StartAppointment(int appointmentId)
    {
        await AppointmentService.UpdateAppointmentStatusAsync(appointmentId, AppointmentStatus.InProgress);
        await LoadAppointments();
        if (showDetailsModal)
        {
            await ViewDetails(appointmentId);
        }
    }

    private async Task CompleteAppointment(int appointmentId)
    {
        await AppointmentService.UpdateAppointmentStatusAsync(appointmentId, AppointmentStatus.Completed);
        await LoadAppointments();
        showDetailsModal = false;
    }

    private async Task CancelAppointment(int appointmentId)
    {
        if (currentUser != null)
        {
            await AppointmentService.CancelAppointmentAsync(appointmentId, currentUser.Id, "Cancelled by doctor");
            await LoadAppointments();
            showDetailsModal = false;
        }
    }

    private void AddConsultationNote(int appointmentId)
    {
        appointmentForNote = appointmentId;
        consultationNoteText = string.Empty;
        showNoteModal = true;
    }

    private async Task SaveConsultationNote()
    {
        if (currentUser != null && !string.IsNullOrEmpty(consultationNoteText))
        {
            var note = new ConsultationNote
            {
                PatientId = appointmentForNote.ToString(),
                DoctorId = currentUser.Id,
                Notes = consultationNoteText
            };

            await AppointmentService.AddConsultationNoteAsync(note);
            showNoteModal = false;
            consultationNoteText = string.Empty;
            await LoadAppointments();
            
            if (showDetailsModal)
            {
                await ViewDetails(appointmentForNote);
            }
        }
    }

    private void RefreshAppointments()
    {
        LoadAppointments();
    }

    private void ExportAppointments()
    {
        // TODO: Implement export functionality
        Console.WriteLine("Export appointments functionality to be implemented");
    }

    private bool IsAppointmentToday(Appointment appointment)
    {
        return appointment.AppointmentDate.Date == DateTime.Today;
    }

    private string GetStatusColor(AppointmentStatus status)
    {
        return status switch
        {
            AppointmentStatus.Scheduled => "primary",
            AppointmentStatus.Confirmed => "info",
            AppointmentStatus.InProgress => "warning",
            AppointmentStatus.Completed => "success",
            AppointmentStatus.Cancelled => "danger",
            AppointmentStatus.NoShow => "secondary",
            _ => "secondary"
        };
    }

    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationState { get; set; }

    private ClaimsPrincipal User => AuthenticationState?.Result.User ?? new ClaimsPrincipal();
}
